<Window x:Class="Projekat_B_Dnevnik_ishrane.views.FoodStuffWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekat_B_Dnevnik_ishrane.views"
        mc:Ignorable="d"
         Style="{StaticResource WindowStyle}"
        WindowStartupLocation="Manual"
        Top="0"
        Left="300" ResizeMode="NoResize"
        Title="FoodStuffWindow" Height="565.909" Width="800">
    <Grid >
        <DataGrid HeadersVisibility="None" x:Name="dataGridFoodStuff" HorizontalAlignment="Left" Height="290" Margin="47,144,0,0" VerticalAlignment="Top" Width="690" AutoGenerateColumns="False" Background="#FFFEEBBB" SelectionChanged="dataGridViewFoodStuff_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn  Header="Namirnica" Binding="{Binding Path='Namirnica'}" IsReadOnly="True" />
                <DataGridTemplateColumn Header="Izaberi">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Name="btnAdd" Content="Izaberi" Click="btnChoose_Click" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    <TextBox x:Name="searchTextBox" LostFocus="searchTextBox_LostFocus"   VerticalAlignment="Top" Background="#FFFEEBBB" Margin="275,25,249.6,0" Height="64"/>
        <Canvas PreviewMouseDown="search" HorizontalAlignment="Left" Height="34" Margin="486,41,0,0" VerticalAlignment="Top" Width="41" RenderTransformOrigin="0.439,0.144">
            <Canvas.Background>
                <ImageBrush ImageSource="search.png"/>
            </Canvas.Background>
        </Canvas>
        <Canvas PreviewMouseDown="goBack" HorizontalAlignment="Left" Height="48" Margin="47,41,0,0" VerticalAlignment="Top" Width="55" RenderTransformOrigin="0.548,1.204">
            <Canvas.Background>
                <ImageBrush ImageSource="left-arrow3.png"/>
            </Canvas.Background>
        </Canvas>
        <TextBox GotFocus="watermakSearchTextBox_GotFocus" x:Name="watermarkSearchTextBox"  HorizontalAlignment="Left" Height="64" Margin="275,25,0,0" TextWrapping="Wrap" Text="{DynamicResource searchTextBox}" VerticalAlignment="Top" Width="269" Background="#FFFEEBBB"/>
    </Grid>
</Window>
