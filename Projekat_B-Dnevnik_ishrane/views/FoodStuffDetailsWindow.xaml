        <TextBlock x:Name="carbsTextBlock" FontSize="18px" HorizontalAlignment="Left" Margin="257,5.2,0,0" Grid.Row="5" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="43"/>
        <Button FontSize="20px" Content="Sačuvaj" HorizontalAlignment="Left" Height="37" Margin="212,0.2,0,0" Grid.Row="7" VerticalAlignment="Top" Width="146" Click="saveStuff"/>
        <TextBox Text="100" KeyUp="onTextChanged" x:Name="textBox" TextAlignment="Center"  FontSize="18px" HorizontalAlignment="Left" Height="47" Margin="212,0,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="146" RenderTransformOrigin="0.5,0.5">
