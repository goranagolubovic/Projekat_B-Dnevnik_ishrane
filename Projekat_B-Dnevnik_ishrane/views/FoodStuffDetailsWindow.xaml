        <Rectangle Grid.Row="5" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="47" Margin="212,0.8,0,0"  Stroke="Black" VerticalAlignment="Top" Width="146"/>
        <TextBlock HorizontalAlignment="Left" Margin="124,13,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Količina(g)" VerticalAlignment="Top" FontSize="18px"/>
