        <TextBlock HorizontalAlignment="Left" Margin="124,9.8,0,0" Grid.Row="3" TextWrapping="Wrap" Text="Proteini(g)" VerticalAlignment="Top" FontSize="18px"/>
        <TextBlock HorizontalAlignment="Left" Margin="142,10.2,0,0" Grid.Row="4" TextWrapping="Wrap" Text="Masti(g)" VerticalAlignment="Top" FontSize="18px" RenderTransformOrigin="1.809,0.45"/>
        <TextBlock HorizontalAlignment="Left" Margin="79,10.2,0,0" Grid.Row="5" TextWrapping="Wrap" Text="Ugljikohidrati(g)" VerticalAlignment="Top" FontSize="18px"/>

        <TextBlock FontSize="20px" x:Name="nameOfFoodStuff" HorizontalAlignment="Left" Margin="233,10,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="28" Width="108" FontWeight="Bold"/>
        <TextBlock x:Name="kcalTextBlock" FontSize="18px" HorizontalAlignment="Left" Margin="257,9.8,0,0" Grid.Row="2" Grid.RowSpan="2" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="40" RenderTransformOrigin="0.223,0.49"/>
