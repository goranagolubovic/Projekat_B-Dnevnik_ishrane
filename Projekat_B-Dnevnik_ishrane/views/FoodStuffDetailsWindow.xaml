        </Grid.Resources>
        <Button Content="Dodaj" HorizontalAlignment="Left" Height="37" Margin="41,309,0,0" VerticalAlignment="Top" Width="101" RenderTransformOrigin="0.539,0.098"/>
        <Button Content="Odustani" HorizontalAlignment="Left" Height="37" Margin="257,309,0,0" VerticalAlignment="Top" Width="101" RenderTransformOrigin="0.539,0.098"/>
        <Rectangle Grid.Row="1" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="47" Margin="212,0,0,0"  Stroke="Black" VerticalAlignment="Top" Width="146"/>
        <Rectangle Grid.Row="1" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="47" Margin="212,47,0,0"  Stroke="Black" VerticalAlignment="Top" Width="146" Grid.RowSpan="2"/>
